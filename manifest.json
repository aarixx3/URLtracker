{
  "manifest_version": 3,
  "name": "Price Drop Tracker",
  "version": "1.0",
  "description": "Tracks price changes on a product page.",
  "permissions": ["storage", "activeTab", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}